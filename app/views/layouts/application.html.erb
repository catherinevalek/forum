    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <!-- <div class="wrapper"> -->
  <header class="header">
      <%= render 'shared/nav' %>
  </header>
  <span class="main">
	<% if notice %>
	  <p class="alert alert-success"><%= notice %></p>
	<% end %>
	<% if alert %>
	  <p class="alert alert-danger"><%= alert %></p>
	<% end %>
    <%= yield %>
    </span>
    <footer class="footer">Footer</footer>
    <!-- </div> -->
  </body>
</html>


